---
import OpinionCard from "../../components//OpinionCard.astro";
import { testimonials } from "../../data/opinions";

---

<div id="opiniones">
  <div class="max-w-7xl mx-auto px-8 mt-10 mb-20 md:my-10 md:px-10 xl:my-20 xl:px-40 2xl:mb-24 2xl:mt-10 2xl:px-0">
    <h2 class="text-4xl font-bold text-white text-center mb-12">Comentarios de nuestra comunidad</h2>

    <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3 md:gap-6 2xl:gap-10">
      {testimonials.map((testimonial) => (
        <OpinionCard
          name={testimonial.name}
          image={testimonial.image}
          text={testimonial.text}
        />
      ))}
    </div>
  </div>
</div>
