---


interface Props {
  icon: any;
  title: string;
  description: string;
}

const { icon: Icon, title, description }: Props = Astro.props;
---



<div class="bg-gray-800 p-4 xl:p-6 2xl:p-8 rounded-lg transition-all duration-300 hover:scale-105 group-hover:blur-sm hover:!blur-none">
    <div class="mb-2 md:mb-4 xl:mb-6">
        <Icon className="mx-auto text-blue-400 w-8 h-8" />
    </div>  
      <h3 class="text-sm md:text-base xl:text-xl font-semibold mb-4">{title}</h3>
      <p class="text-gray-400 text-sm">{description}</p>
 </div>